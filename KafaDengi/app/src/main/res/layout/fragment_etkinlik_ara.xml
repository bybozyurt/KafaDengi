<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:src="@drawable/ic_search" />


        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:textColor="@color/colorBlack"
                android:padding="15dp"
                android:visibility="visible"
                android:id="@+id/edt_ara_EtkinlikAraFragment"
                android:layout_width="250dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:background="@drawable/background_input"
                android:hint="Ara"
                android:textColorHint="@color/colorDivider"/>



        </RelativeLayout>

        <Button
            android:text="ara"
            android:id="@+id/btn_ara_etkinlik"
            android:background="@drawable/btn_bg"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>
        <Spinner
            android:id="@+id/sp_ara_neye_gore_EtkinlikAraFragment"
            android:background="@drawable/btn_detay"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_ara_EtkinlikAraFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>